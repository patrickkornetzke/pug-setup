doctype html
html
    head
        title= title
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1")
        block head
            link(rel="stylesheet" href="/css/bower-components.css")
            link(rel="stylesheet" href="/css/style.css")

    body.site
        header.site-header
            block header

        main.site-content
            block content

        footer.site-footer
